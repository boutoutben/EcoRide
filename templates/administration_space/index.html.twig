{% extends 'base.html.twig' %}

{% block title %}Hello AdministrationSpaceController!{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
<main>
    <section class="block" id="createEmployee">
        <h1>Créer un compte employée</h1>
        <div class="allInput">
            <div class="inputBackground">
                <img src="img/user.png" alt="username">
                <input type="text" class="input-place" placeholder="username"/>
            </div>
            <div class="inputBackground">
                <img src="img/key.png" alt="mot de passe">
                <input type="password" id="passwordInput" class="input-place" placeholder="mot de passe sécurisé"/>
                <img id='password' src="img/hidden.png" alt="montrer et cacher mot de passe"/>
            </div>
            <p style="text-align:center;width:70%">* Le mot de passe doit contenir au moins 8 caractères, une majuscule, un chiffre et un caractère spécial.</p>
        </div>
        <button class="standard-btn">Créer un compte</button>
    </section>
</main>
{% endblock %}
